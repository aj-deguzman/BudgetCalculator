        android:ems="10"
        android:id="@+id/expAmt10"
        android:layout_alignBottom="@+id/exp10"
        android:layout_alignParentRight="true"
        android:textSize="15sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculate"
        android:id="@+id/calcButton"
        android:layout_below="@+id/exp10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:id="@+id/resetButton"
        android:layout_alignBottom="@+id/calcButton"
        android:layout_alignRight="@+id/incomeInput"
        android:layout_alignEnd="@+id/incomeInput" />


</RelativeLayout>
