        android:id="@+id/expType3"
        android:layout_alignBottom="@+id/exp3"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:textSize="12sp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/expType4"
        android:layout_alignBottom="@+id/exp4"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:textSize="12sp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/expType5"
        android:layout_alignBottom="@+id/exp5"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:textSize="12sp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/expType6"
        android:layout_alignBottom="@+id/exp6"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:textSize="12sp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/expType7"
        android:layout_alignBottom="@+id/exp7"
        android:layout_centerHorizontal="true"
